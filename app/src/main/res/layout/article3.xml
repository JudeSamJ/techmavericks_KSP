<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".article"
    android:background="@drawable/apps">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:background="@color/orange"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="333dp"
        android:layout_marginBottom="682dp"
        android:onClick="goBack"
        android:src="@drawable/baseline_arrow_back_24" />

    <EditText
        android:id="@+id/editTextText6"
        android:layout_width="364dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="105dp"
        android:background="#4CAF50"
        android:ems="10"
        android:inputType="text"
        android:text="1) Cybercrimes like online frauds, hacking" />

    <EditText
        android:id="@+id/editTextText7"
        android:layout_width="364dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="200dp"
        android:background="#4CAF50"
        android:ems="10"
        android:inputType="text"
        android:text="2) Drug Trafficking leads to spoil youth's life " />

    <EditText
        android:id="@+id/editTextText9"
        android:layout_width="364dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="300dp"
        android:background="#4CAF50"
        android:ems="10"
        android:inputType="text"
        android:text="3) Incidents of violence,robberies,and murders" />

    <EditText
        android:id="@+id/editTextText10"
        android:layout_width="364dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="300dp"
        android:background="#4CAF50"
        android:ems="10"
        android:inputType="text"
        android:text="4)  Corruption in Government Institutions." />

    <EditText
        android:id="@+id/editTextText11"
        android:layout_width="364dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="200dp"
        android:background="#4CAF50"
        android:ems="10"
        android:inputType="text"
        android:text="5) Domestic abuse remains a prevalent issue. " />

    <EditText
        android:id="@+id/editTextText12"
        android:layout_width="364dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="100dp"
        android:background="#4CAF50"
        android:ems="10"
        android:inputType="text"
        android:text="6) Witnesses a high number of road accidents." />

    <EditText
        android:id="@+id/editTextText13"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="675dp"
        android:ems="10"
        android:inputType="text"
        android:text="REPORT"
        android:fontFamily="@font/alfa_slab_one"
        android:textSize="23dp"
        android:textStyle="bold" />


</RelativeLayout>